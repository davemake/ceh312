import { Component } from '@angular/core';
import { Platform, Nav, NavParams } from 'ionic-angular';
import { Base } from "../../providers/base";

declare let window: any;
declare let cordova: any;

@Component({
        selector: 'page-users',
        templateUrl: 'user.html',
})

export class User {
	
	user: any;
	role: any;
	host: any;
	student: any;
	volunteer: any;
	email: any="davemakena@gmail.com";
	password: any="entering";
	signinMode: any=(new Date).getTime();
	signupMode: any;

	constructor(
		public nav: Nav, 
		public params: NavParams,
		public platform: Platform, 
		public base: Base,
	) {
		window.thisUser = this;
		this.user = this.base.user;
    }

	setMode(mode) {
		this.signinMode = null;
		this.signupMode = null;
		if (mode=="signin") {
			this.signinMode = (new Date).getTime();
		}
		if (mode=="signup") {
			this.signupMode = (new Date).getTime();
		}
	}

	setRole(role) {
		this.role = role;
	}

	signup() {
		let email = this.email;
		let password = this.password;
		let role = this.role;
		this.base.userSignup(email, password, role);
		this.watchUser();
	}

	signin() {
		let email = this.email;
		let password = this.password;
		this.base.userSignin(email, password);
		this.watchUser();
	}

	signout() {
		this.base.userSignout();
		this.watchUser();
	}

	destroy() {
		this.base.userDestroy();
		setTimeout( ()=>{
			this.watchUser();
		}, 10);
	}
	
	watchUser() {
		let user = this.user;
		let watch = setInterval( ()=>{
			this.user = this.base.user;
			console.log("watching...");
			if (user!=this.user) {
				clearInterval(watch);
			}
		}, 100);
	}

}
